<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <!-- 匹配 "request msg is ... body ... }}" 部分 -->
                <replace regex="(request msg is.*?body)(.*?)(}})" replacement="$1$2$3">
                    <!-- 手机号：隐藏中间四位 -->
                    <replace regex="(phone\":\s*\")(\d{3})(\d{4})(\d{4})" replacement="$1$2****$4"/>

                    <!-- 身份证号：隐藏中间四位 -->
                    <replace regex="(idCard\":\s*\")(\d{3})(\d{10})(\d{4})" replacement="$1$2****$4"/>

                    <!-- 邮件地址：隐藏域名之前的部分 -->
                    <replace regex="(mail_adress\":\s*\")(.*?)(@.*?\..{2,6})" replacement="$1***$3"/>

                    <!-- 信用卡号、借记卡号：保留前四位和后四位，隐藏中间位数 -->
                    <replace regex="(creditCard\":\s*\")(\d{4})(\d{8,12})(\d{4})" replacement="$1$2****$4"/>
                    <replace regex="(debitCard\":\s*\")(\d{4})(\d{8,12})(\d{4})" replacement="$1$2****$4"/>
                </replace>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>